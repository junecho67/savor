{
  "name": "Savor Design System",
  "version": "1.0.0",
  "description": "Design tokens and component rules for Savor â€” keep future designs consistent with Figma (Designs - Savor, node 206-12626).",
  "colors": {
    "text": "#44352b",
    "textMuted": "#7e766b",
    "primary": "#d75c41",
    "iconDefault": "#1b2128",
    "icons": "#7e766b",
    "borderLine": "#6e604933",
    "background": "#ffffff",
    "backgroundSecondary": "#f5f5f5",
    "white": "#ffffff"
  },
  "typography": {
    "fontFamily": {
      "sans": "'DM Sans', 'Inter', system-ui, sans-serif",
      "serif": "'DM Serif Display', Georgia, serif"
    },
    "fontSize": {
      "xs": "10px",
      "sm": "12px",
      "base": "14px",
      "md": "16px",
      "lg": "18px",
      "xl": "20px",
      "2xl": "24px"
    },
    "fontWeight": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeight": {
      "tight": 1.2,
      "normal": 1.4,
      "relaxed": 1.5
    }
  },
  "spacing": {
    "0": "0",
    "1": "4px",
    "2": "8px",
    "3": "12px",
    "4": "16px",
    "5": "20px",
    "6": "24px",
    "8": "32px",
    "10": "40px",
    "12": "48px",
    "15": "60px",
    "maxContent": "120px"
  },
  "borderRadius": {
    "sm": "6px",
    "md": "8px",
    "lg": "12px",
    "xl": "20px",
    "2xl": "25px",
    "full": "50%"
  },
  "shadows": {
    "nav": "0 -1px 4px rgba(68, 53, 43, 0.08)"
  },
  "components": {
    "searchBar": {
      "background": "colors.backgroundSecondary",
      "borderRadius": "borderRadius.2xl",
      "paddingX": "spacing.4",
      "paddingY": "spacing.3",
      "placeholderColor": "colors.textMuted",
      "iconColor": "colors.icons"
    },
    "button": {
      "primary": {
        "background": "colors.primary",
        "text": "colors.white",
        "borderRadius": "borderRadius.sm",
        "paddingX": "spacing.5",
        "paddingY": "spacing.2"
      }
    },
    "card": {
      "imageBorderRadius": "borderRadius.lg",
      "borderRadius": "borderRadius.lg"
    },
    "avatar": {
      "borderRadius": "borderRadius.full"
    },
    "nav": {
      "background": "colors.background",
      "activeColor": "colors.primary",
      "inactiveColor": "colors.icons",
      "iconSize": "24px",
      "labelSize": "typography.fontSize.xs"
    }
  }
}
